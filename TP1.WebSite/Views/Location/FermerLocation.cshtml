@model TP1.WebSite.Models.Locations.Location.FermerLocationVM
@{
    ViewData["Title"] = "CreateNote";
}

<h1>Fermer la location</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FermerLocation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NoteAjouter" class="control-label"></label>
                <input asp-for="NoteAjouter" class="form-control" />
                <span asp-validation-for="NoteAjouter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFermeture" class="control-label"></label>
                <input asp-for="DateFermeture" class="form-control" />
                <span asp-validation-for="DateFermeture" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary ajouter">
                Fermer la location
            </button>
        </form>
    </div>
</div>
<div class="mt-2 mb-2">
    @Html.ActionLink("Annuler", "Manage","Location", new {}, new { @class = "btn btn-primary" })
</div>

