@model TP1.WebSite.Models.Identité.Account.LogInVM

@{
    ViewData["Title"] = "LogIn";
}

<style>
    .container {
        margin-top: 75px;
        margin: 0 auto;
        text-align: center;
    }

    form {
        display: inline-block;
        margin: auto;
        width: auto;
    }
</style>

<div class="mt-2 mb-2">
</div>

<div class="text-center">
    <div class="container  col-md-8">
        <h1 class="display-4" style="color: blue">Connectez-vous pour accéder à votre rôle:</h1>
        <br>
        <br>
        <br>
        <form asp-action="LogIn" asp-route-returnUrl="@ViewBag.ReturnUrl">
            <div class="row">
                <div class="col-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NomUtilisateur" class="control-label"></label>
                        <input asp-for="NomUtilisateur" class="form-control" />
                        <span asp-validation-for="NomUtilisateur" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MotDePasse" class="control-label"></label>
                        <input asp-for="MotDePasse" class="form-control" />
                        <span asp-validation-for="MotDePasse" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2 mb-2">
                        <input type="submit" value="Connexion" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
